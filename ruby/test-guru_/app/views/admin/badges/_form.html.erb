<%= form_with(model: [:admin, badge], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :badge_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :picture_file %>
    <%= form.text_field :picture_file, id: :badge_picture_file, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :rule_name %>
    <%= form.select :rule_name, generate_collection, {}, { class: "form-control" }  %>
  </div>

  <div class="form-group">
    <%= form.label :rule_parameter %>
    <%= form.text_field :rule_parameter, id: :badge_rule_parameter, class: "form-control" %>
  </div>

  <%= form.submit class: "btn btn-primary" %>
<% end %>